{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "lib": ["esnext"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "removeComments": true,
    "outDir": "./lib",
    "strict": true,
    "target": "ES2018",
    "inlineSourceMap": true,
    "types": ["node", "@types/jest"],
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["./src"]
}
