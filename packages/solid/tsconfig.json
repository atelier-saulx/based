{
  "extends": "@saulx/tsconfig/default.json",
  "compilerOptions": {
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "allowImportingTsExtensions": true,
    "moduleResolution": "Node",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/components/*"]
    }
  },
  "include": ["./src", "./test"],
  "exclude": ["./dist/test", "./dist/src"]
}
