{
  "name": "@based/db",
  "version": "0.0.1",
  "license": "MIT",
  "type": "module",
  "main": "./dist/src/index.js",
  "scripts": {
    "build": "tsc",
    "watch": "npx tsc --watch",
    "test": "npx ava",
    "clean": "rimraf {.turbo,dist,node_modules}",
    "build-zig": "mkdir -p dist && zig build --summary all",
    "build-selva": "mkdir -p build && make -C clibs",
    "clean-selva": "rm -rf build && make -C clibs clean",
    "get-napi": "./scripts/download-node-headers.sh",
    "test-real": "npm run build && npm run test -- ./dist/test/real.js",
    "test-single-ref": "zig build && npm run build && npm test -- ./dist/test/singleRef.js",
    "playground": "zig build && npm run build && node ./dist/test/index.js"
  },
  "sideEffects": false,
  "ava": {
    "timeout": "2m",
    "workerThreads": true,
    "files": [
      "./dist/test/**/*.js"
    ]
  },
  "files": [
    "dist/lib.node",
    "dist/src",
    "README.md",
    "package.json"
  ],
  "dependencies": {
    "data-record": "^2.0.0",
    "@saulx/hash": "^3.0.0",
    "@based/schema": "^3.1.0",
    "snappy": "^7.2.2",
    "picocolors": "^1.0.1",
    "@saulx/utils": "^4.3.2",
    "@based/server": "^8.0.0",
    "@based/client": "^6.0.0"
  },
  "devDependencies": {
    "lorem-ipsum": "^2.0.8",
    "ts-node": "10.9.1",
    "ava": "5.3.1",
    "typescript": "^4.3.5",
    "rimraf": "^3.0.2"
  }
}
