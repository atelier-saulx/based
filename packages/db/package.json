{
  "name": "@based/db",
  "version": "0.0.1",
  "license": "MIT",
  "type": "module",
  "main": "./dist/src/index.js",
  "scripts": {
    "get-napi": "./scripts/download-node-headers.sh",
    "build-selva": "mkdir -p build && make -C clibs",
    "build": "npm run build-selva && zig build  && tsc",
    "watch": "npx tsc --watch",
    "clean-selva": "rm -rf build && make -C clibs clean",
    "clean": "rimraf {.turbo,dist,node_modules,.zig-cache,.zig-out,tmp} && npm run clean-selva",
    "playground": "npm run build && node ./dist/test/shared/playground.js",
    "test": "npm run build && lldb -b -o run --one-line-on-crash bt -o \"script import os; os._exit(0)\" node ./scripts/test.js",
    "test-fast": "node ./scripts/test.js"
  },
  "sideEffects": false,
  "files": [
    "dist/lib.node",
    "dist/src",
    "README.md",
    "package.json"
  ],
  "dependencies": {
    "data-record": "^2.0.0",
    "@saulx/hash": "^3.0.0",
    "@based/schema": "^3.1.0",
    "snappy": "^7.2.2",
    "picocolors": "^1.0.1",
    "@saulx/utils": "^4.3.2",
    "@based/server": "^8.0.0",
    "@based/client": "^6.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.5.3",
    "lorem-ipsum": "^2.0.8",
    "ts-node": "10.9.1",
    "typescript": "^4.3.5",
    "rimraf": "^3.0.2"
  }
}
