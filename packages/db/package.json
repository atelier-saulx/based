{
  "name": "@based/db",
  "version": "0.0.1",
  "license": "MIT",
  "type": "module",
  "main": "./dist/src/index.js",
  "scripts": {
    "get-napi": "./scripts/download-node-headers.sh",
    "build-selva": "mkdir -p build && make -C clibs",
    "build": "npm run build-selva && zig build  && tsc",
    "watch": "npx tsc --watch",
    "clean-selva": "rm -rf build && make -C clibs clean",
    "clean": "rimraf {.turbo,dist,node_modules,.zig-cache,.zig-out,tmp} && npm run clean-selva",
    "playground-nodebug": "npm run build && node ./dist/test/shared/playground.js",
    "playground": "npm run build && LOCPATH=./build/locale lldb -b -o run --one-line-on-crash bt -o \"script import os; os._exit(0)\" node ./dist/test/shared/playground.js",
    "playground-fast": "node ./dist/test/shared/playground.js",
    "test": "npm run build && LOCPATH=./build/locale lldb -b -o run --one-line-on-crash bt -o \"script import os; os._exit(0)\" node ./scripts/test.js",
    "test-fast": "LOCPATH=./build/locale node ./scripts/test.js",
    "test-zig": "zig build && npm run test-fast",
    "test-ts": "tsc && node ./scripts/test.js",
    "perf": "npm run build && node benchmarks/references.js && node benchmarks/transfermarkt/transfermarkt-based.js"
  },
  "sideEffects": false,
  "files": [
    "dist/lib.node",
    "dist/src",
    "README.md",
    "package.json"
  ],
  "dependencies": {
    "@based/cli": "^8.0.0-alpha.1",
    "@based/client": "^6.0.0",
    "@based/schema": "4",
    "@based/server": "^8.0.0",
    "@saulx/hash": "^3.0.0",
    "@saulx/utils": "^4.3.2",
    "picocolors": "^1.0.1",
    "snappy": "^7.2.2"
  },
  "devDependencies": {
    "@types/node": "^22.5.3",
    "better-sqlite3": "^11.5.0",
    "big-json": "^3.2.0",
    "exit-hook": "^4.0.0",
    "JSONStream": "^1.3.5",
    "lorem-ipsum": "^2.0.8",
    "pkg-dir": "^8.0.0",
    "rimraf": "^3.0.2",
    "ts-node": "10.9.1",
    "typescript": "^5.6.3"
  }
}
