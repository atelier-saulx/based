{
  "name": "@based/db-client",
  "version": "0.0.1",
  "license": "MIT",
  "main": "dist/index.js",
  "scripts": {
    "build": "npx tsc",
    "watch": "npm run build -- --watch",
    "clean": "rimraf {.turbo,dist,node_modules}",
    "test": "SAVE_AT_EXIT=0 ava --color --node-arguments='--expose-gc' --timeout 3m --verbose"
  },
  "sideEffects": false,
  "ava": {
    "files": [
      "test/*.ts",
      "test/subs/*.ts"
    ],
    "concurrency": 5,
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "dependencies": {
    "@based/client": "^4.7.6",
    "@based/db-subs": "^0.0.1",
    "@based/schema": "1.1.14",
    "@saulx/diff": "^1.1.4",
    "@saulx/hash": "^2.0.0",
    "@saulx/utils": "^3.5.3",
    "data-record": "^1.0.2",
    "get-port": "^5.1.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/node": "^17.0.23",
    "@types/uuid": "^9.0.2",
    "ava": "3.15.0",
    "before-exit": "1.0.0",
    "rimraf": "^3.0.2",
    "ts-node": "10.9.1",
    "typescript": "^5.1.6"
  }
}
