{
  "name": "@based/client",
  "version": "4.6.0",
  "license": "MIT",
  "main": "dist/index.js",
  "scripts": {
    "build": "npx tsc",
    "watch": "npm run build -- --watch",
    "clean": "rimraf {.turbo,dist,node_modules}",
    "test": "ava --color --node-arguments='--expose-gc' --timeout 3m --verbose",
    "browser": "concurrently \"nodemon ./test/browser/based-server.ts --watch ../server/dist --watch ./test/browser/based-server.ts\" \"aristotle watch -t test/browser/index.tsx -p 8005\""
  },
  "sideEffects": false,
  "ava": {
    "files": [
      "test/*.ts"
    ],
    "concurrency": 1,
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "dependencies": {
    "@based/opts": "0.4.0",
    "@saulx/diff": "^1.1.4",
    "@saulx/hash": "^2.0.0",
    "fflate": "^0.7.3",
    "@saulx/utils": "^3.2.2",
    "cross-fetch": "^3.1.4",
    "isomorphic-ws": "^4.0.1"
  },
  "devDependencies": {
    "@aws-sdk/lib-storage": "^3.304.0",
    "@aws-sdk/client-s3": "^3.304.0",
    "nodemon": "^2.0.20",
    "@based/functions": "^2.0.1",
    "concurrently": "^7.1.0",
    "@saulx/utils": "^3.2.2",
    "@saulx/aristotle": "^4.3.0",
    "@types/node": "^17.0.23",
    "ava": "3.15.0",
    "ts-node": "10.9.1",
    "typescript": "^4.3.5",
    "rimraf": "^3.0.2"
  }
}
