{
  "name": "@based/client",
  "version": "8.2.2-alpha.1",
  "license": "MIT",
  "scripts": {
    "buildCjs": "npx esbuild index.cjs --bundle --platform=node --minify --outfile=./dist/index.cjs",
    "build": "npx tsc && cp ./dist/src/index.d.ts ./dist/src/index_original.d.ts && npm run buildCjs",
    "watch": "npx tsc --watch",
    "clean": "rm -rf ./dist ./node_modules ./tsconfig.tsbuildinfo",
    "test": "npx ava",
    "browser": "npx vite ./test/browser",
    "browser-server": "node ./test/browser/server.js"
  },
  "type": "module",
  "main": "./dist/src/index.js",
  "browser": {
    "./dist/src/stream/index.js": "./dist/src/stream/browser.js",
    "./dist/src/persistentStorage/index.js": "./dist/src/persistentStorage/browser.js"
  },
  "exports": {
    "./ssr": "./dist/src/ssr.js",
    ".": {
      "node": {
        "require": "./dist/index.cjs"
      },
      "default": "./dist/src/index.js"
    }
  },
  "ava": {
    "timeout": "10m",
    "workerThreads": false,
    "files": [
      "./dist/test/**/*.js"
    ]
  },
  "files": [
    "dist/src",
    "dist/index.cjs",
    "README.md",
    "package.json"
  ],
  "dependencies": {
    "@based/errors": "1.3.1-alpha.1",
    "@based/fetch": "^2.0.3",
    "@based/hash": "1.0.0",
    "@based/opts": "^1.1.0",
    "@based/protocol": "0.0.5",
    "@based/utils": "^1.1.0",
    "@saulx/diff": "^2.0.3",
    "fflate": "0.8.2",
    "isomorphic-ws": "^5.0.0",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "@based/client-old": "npm:@based/client@6.11.2",
    "@based/db": "0.1.3-alpha.1",
    "@based/functions": "3.3.2-alpha.1",
    "ava": "5.3.1",
    "cross-fetch": "4.0.0",
    "esbuild": "^0.25.9",
    "get-port": "7.0.0",
    "typescript": "^5.2.2",
    "vite": "^7.1.3"
  }
}
