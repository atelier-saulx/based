{
  "name": "@based/client",
  "version": "2.4.0",
  "license": "MIT",
  "main": "dist/index.js",
  "browser": {
    "./dist/file/stream/index.js": "./dist/file/stream/browser.js"
  },
  "scripts": {
    "buildBundle": "node ./build/index.js",
    "build": "npx tsc && npm run buildBundle",
    "watch": "npm run build -- --watch",
    "test": "ava --timeout 1m --verbose",
    "watchTest": "ava --color --watch --verbose",
    "clean": "rimraf {.turbo,dist,node_modules}"
  },
  "sideEffects": false,
  "ava": {
    "files": [
      "test/*.ts"
    ],
    "concurrency": 1,
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "dependencies": {
    "@based/get-service": "2.4.0",
    "@based/graphql": "2.4.0",
    "@based/types": "2.4.3",
    "@saulx/diff": "^1.1.3",
    "@saulx/hash": "^1.1.0",
    "@saulx/utils": "^2.2.1",
    "cross-fetch": "^3.1.4",
    "isomorphic-ws": "^4.0.1",
    "ws": "^7.5.3"
  },
  "devDependencies": {
    "esbuild": "^0.14.29",
    "@saulx/hash": "^1.1.0",
    "@saulx/selva": "10.6.3",
    "@saulx/utils": "^2.2.1",
    "@saulx/selva-server": "10.6.3",
    "@types/jsonwebtoken": "^8.5.6",
    "@types/node": "^17.0.23",
    "@types/ws": "^7.4.6",
    "ava": "3.15.0",
    "jsonwebtoken": "^8.5.1",
    "ts-node": "^10.1.0",
    "typescript": "^4.3.5",
    "rimraf": "^3.0.2"
  }
}
