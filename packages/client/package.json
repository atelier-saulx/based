{
  "name": "@based/client",
  "version": "4.0.0",
  "license": "MIT",
  "main": "dist/index.js",
  "scripts": {
    "build": "npx tsc",
    "watch": "npm run build -- --watch",
    "clean": "rimraf {.turbo,dist,node_modules}",
    "test": "ava --color --node-arguments='--expose-gc' --timeout 3m --verbose",
    "browser": "concurrently \"nodemon ./test/browser/based-server.ts\" \"aristotle watch -t test/browser/index.tsx -p 8005\""
  },
  "sideEffects": false,
  "ava": {
    "files": [
      "test/*.ts"
    ],
    "concurrency": 1,
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "dependencies": {
    "@saulx/diff": "^1.1.3",
    "@saulx/hash": "^1.1.0",
    "fflate": "^0.7.3",
    "@saulx/utils": "^3.2.0",
    "cross-fetch": "^3.1.4",
    "isomorphic-ws": "^4.0.1",
    "ws": "^7.5.3"
  },
  "devDependencies": {
    "nodemon": "^2.0.20",
    "@based/functions": "^1.0.0",
    "concurrently": "^7.1.0",
    "@saulx/utils": "^3.2.0",
    "@saulx/aristotle": "^4.3.0",
    "@types/node": "^17.0.23",
    "@types/ws": "^7.4.6",
    "ava": "3.15.0",
    "ts-node": "10.9.1",
    "typescript": "^4.3.5",
    "rimraf": "^3.0.2"
  }
}
