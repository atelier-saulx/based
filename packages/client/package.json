{
  "name": "@based/db-client",
  "version": "2.0.0",
  "license": "MIT",
  "main": "dist/src/index.js",
  "scripts": {
    "build": "npx tsc --build",
    "watch": "npm run build -- --watch",
    "clean": "rimraf {.turbo,dist,node_modules}",
    "test": "FORCE_COLOR=1 ava --color --node-arguments='--expose-gc' --timeout 3m --verbose",
    "test-ci": "FORCE_COLOR=1 ava --color --node-arguments='--expose-gc' --concurrency 1 --timeout 3m",
    "testSchema": "npm run test --concurrency 5 ./dist/test/schema/*.js",
    "testGet": "npm run test --concurrency 5 ./dist/test/*.js",
    "testIndexing": "npm run test ./dist/test/indexing/*.js"
  },
  "sideEffects": false,
  "files": [
    "dist/src",
    "!dist/src/**/*.js.map"
  ],
  "type": "module",
  "ava": {
    "concurrency": 5,
    "timeout": "2m",
    "workerThreads": false,
    "files": [
      "./dist/test/*.js",
      "./dist/test/schema/*.js",
      "./dist/test/indexing/*.js"
    ]
  },
  "dependencies": {
    "@based/client": "^4.7.6",
    "@based/db-query": "2.0.0",
    "@based/schema": "^2.3.0",
    "@saulx/diff": "^1.1.4",
    "@saulx/hash": "^2.0.0",
    "@saulx/utils": "^3.5.3",
    "data-record": "^1.1.0",
    "get-port": "^5.1.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@based/server": "^6.7.2",
    "@saulx/prettier-config": "^1.0.0",
    "@saulx/tsconfig": "^1.0.6",
    "@types/node": "^17.0.23",
    "@types/uuid": "^9.0.2",
    "@types/rimraf": "^3.0.2",
    "ava": "5.3.1",
    "before-exit": "1.0.0",
    "rimraf": "^3.0.2",
    "ts-node": "10.9.1",
    "typescript": "^5.2.2"
  }
}
