{
  "name": "@based/functions",
  "version": "3.2.3",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "copy:uws": "cp src/uws.d.ts dist/uws.d.ts",
    "copy:client": "cp ./dist/client.d.ts ./dist/client_original.d.ts",
    "clean:ts:before": "rm -rf ./dist ./tsconfig.tsbuildinfo || true",
    "build": "npm run clean:ts:before && npx tsc -b && npm run copy:uws && npm run copy:client",
    "watch": "npx tsc --watch",
    "clean": "rimraf {dist,node_modules}"
  },
  "sideEffects": false,
  "dependencies": {
    "@based/db": "0.0.71",
    "@based/utils": "^1.0.0",
    "utility-types": "^3.10.0",
    "arktype": "^2.1.20"
  },
  "devDependencies": {
    "rimraf": "^6.0.1",
    "ts-node": "10.9.1"
  },
  "peerDependencies": {
    "esbuild": "*"
  }
}
