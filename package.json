{
  "name": "@based/workspaces",
  "version": "2.5.4",
  "author": "Based",
  "license": "MIT",
  "homepage": "https://github.com/atelier-saulx/based#readme",
  "bugs": {
    "url": "https://github.com/atelier-saulx/based/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/atelier-saulx/based"
  },
  "private": true,
  "description": "Based",
  "keywords": [
    "based",
    "saulx"
  ],
  "workspaces": [
    "packages/*"
  ],
  "prettier": "@saulx/prettier-config",
  "eslintConfig": {
    "extends": "@saulx/eslint-config"
  },
  "scripts": {
    "prepare": "husky install",
    "postinstall": "[ -d '.husky' ] && (husky install && shx rm -rf .git/hooks && shx ln -s ../.husky .git/hooks) || true",
    "syncpack": "syncpack fix-mismatches",
    "syncpack:check": "syncpack list-mismatches",
    "watch": "turbo run watch --parallel --no-cache",
    "lint": "turbo run lint",
    "build": "turbo run build",
    "test": "turbo run test",
    "clean": "turbo run clean && rimraf node_modules"
  },
  "packageManager": "npm@8.1.0",
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "_lint-staged": {
    "*": [
      "npm run lint"
    ]
  },
  "_husky": {
    "hooks": {
      "pre-push": "npm run lint"
    }
  },
  "devDependencies": {
    "turbo": "1.6.3",
    "@saulx/eslint-config": "^1.1.1",
    "@saulx/prettier-config": "^1.0.0",
    "husky": "7.0.4",
    "lint-staged": "12.1.2",
    "rimraf": "^3.0.2",
    "syncpack": "^6.2.0",
    "typescript": "^4.3.5"
  }
}
