{
  "name": "@based/workspaces",
  "version": "2.4.13",
  "author": "Based",
  "license": "MIT",
  "homepage": "https://github.com/atelier-saulx/based#readme",
  "bugs": {
    "url": "https://github.com/atelier-saulx/based/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/atelier-saulx/based"
  },
  "private": true,
  "description": "Based",
  "keywords": [
    "based",
    "saulx"
  ],
  "workspaces": [
    "shared/*",
    "packages/*"
  ],
  "prettier": "@based/prettier-config",
  "eslintConfig": {
    "extends": "@based/eslint-config"
  },
  "scripts": {
    "prepare": "husky install",
    "postinstall": "[ -d '.husky' ] && (husky install && shx rm -rf .git/hooks && shx ln -s ../.husky .git/hooks) || true",
    "syncpack": "syncpack fix-mismatches",
    "syncpack:check": "syncpack list-mismatches",
    "watch": "turbo run watch --parallel --no-cache",
    "lint": "turbo run lint",
    "build": "turbo run build",
    "test": "turbo run test",
    "clean": "turbo run clean && rimraf node_modules",
    "release": "esno shared/scripts/release"
  },
  "packageManager": "npm@8.1.0",
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "lint-staged": {
    "*": [
      "npm run lint"
    ]
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run lint"
    }
  },
  "dependencies": {
    "turbo": "^1.1.10"
  },
  "devDependencies": {
    "@types/fs-extra": "^9.0.13",
    "@types/node": "^17.0.23",
    "@types/yargs": "^17.0.0",
    "chalk": "^4.1.2",
    "enquirer": "^2.3.6",
    "esno": "^0.14.1",
    "execa": "^6.0.0",
    "fs-extra": "^10.0.1",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.2",
    "new-github-release-url": "^2.0.0",
    "npm-run-all": "^4.1.5",
    "open": "^8.4.0",
    "rimraf": "^3.0.2",
    "semver": "^7.3.6",
    "semver-diff": "^4.0.0",
    "shx": "^0.3.3",
    "simple-git": "^3.0.3",
    "syncpack": "^6.2.0",
    "typescript": "^4.3.5",
    "yargs": "^17.3.1"
  }
}
