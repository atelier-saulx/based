{
  "name": "@basdd/workspaces",
  "version": "0.1.0",
  "author": "Based",
  "license": "MIT",
  "homepage": "https://github.com/atelier-saulx/based#readme",
  "bugs": {
    "url": "https://github.com/atelier-saulx/based/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/atelier-saulx/based"
  },
  "private": true,
  "description": "Based",
  "keywords": [
    "based",
    "saulx"
  ],
  "workspaces": [
    "packages/*"
  ],
  "prettier": "@saulx/prettier-config",
  "eslintConfig": {
    "extends": "@saulx/eslint-config"
  },
  "scripts": {
    "postinstall": "[ -d '.husky' ] && (husky install && shx rm -rf .git/hooks && shx ln -s ../.husky .git/hooks) || true",
    "deduplicate": "yarn-deduplicate -s fewer yarn.lock",
    "deduplicate:check": "yarn-deduplicate -s fewer yarn.lock --list --fail",
    "syncpack": "syncpack fix-mismatches",
    "syncpack:check": "syncpack list-mismatches",
    "watch": "turbo run watch --parallel --no-cache",
    "lint": "turbo run lint",
    "build": "turbo run build",
    "test": "turbo run test",
    "release": "esno scripts/release",
    "clean": "rimraf packages/*/{.turbo,dist,node_modules} apps/*/{.turbo,dist,node_modules} && rimraf node_modules && yarn",
    "prepare": "husky install"
  },
  "packageManager": "yarn@1.22.17",
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "lint-staged": {
    "*": [
      "yarn lint"
    ]
  },
  "husky": {
    "hooks": {
      "pre-push": "yarn lint"
    }
  },
  "dependencies": {
    "turbo": "^1.1.10"
  },
  "devDependencies": {
    "@types/node": "^17.0.23",
    "@types/yargs": "^17.0.0",
    "chalk": "^5.0.0",
    "enquirer": "^2.3.6",
    "esno": "^0.14.0",
    "execa": "^6.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.2",
    "new-github-release-url": "^2.0.0",
    "open": "^8.4.0",
    "rimraf": "^3.0.2",
    "shx": "^0.3.3",
    "simple-git": "^3.0.3",
    "syncpack": "^6.2.0",
    "typescript": "4.5.4",
    "yargs": "^17.3.1",
    "yarn-deduplicate": "^4.0.0"
  }
}
