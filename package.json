{
  "name": "@based/sdk",
  "version": "1.1.5",
  "type": "module",
  "main": "./dist/sdk.js",
  "// temporarily-private-for-dev": "",
  "private": true,
  "scripts": {
    "build-c": "./scripts/build-c",
    "build-zig": "zig build",
    "build-zig-debug": "zig build -Denable_debug=true",
    "build-zig:linux-arm64": "zig build -Dtarget=aarch64-linux-gnu",
    "build-zig-debug:linux-arm64": "zig build -Dtarget=aarch64-linux-gnu -Denable_debug=true",
    "build-zig:linux-x64": "zig build -Dtarget=x86_64-linux-gnu",
    "build-zig-debug:linux-x64": "zig build -Dtarget=x86_64-linux-gnu -Denable_debug=true",
    "build-ts": "tsc -p tsconfig.build.json",
    "build-native": "npm run build-c && npm run build-zig",
    "build-exports": "tsx scripts/zigTsExports.ts",
    "build-ts-bundle": "tsdown --dts",
    "build": "npm run concurrently npm:build-native npm:build-ts npm:build-exports",
    "watch-zig": "zig build --watch",
    "watch-zig-debug": "zig build -Denable_debug=true --watch",
    "watch-zig:linux-arm64": "zig build -Dtarget=aarch64-linux-gnu --watch",
    "watch-zig:linux-x64": "zig build -Dtarget=x86_64-linux-gnu --watch",
    "watch-ts": "tsc -p tsconfig.build.json --watch",
    "watch-native": "npm run build-c && npm run watch-zig",
    "watch-exports": "tsx --watch-path=./native/types.zig scripts/zigTsExports.ts ",
    "watch": "npm run concurrently npm:watch-native npm:watch-ts npm:watch-exports",
    "concurrently": "FORCE_COLOR=1 concurrently -c 'grey,blue,cyan'",
    "test": "LOCPATH=dist/locale tsx ./scripts/test.ts",
    "test-gdb": "LOCPATH=dist/locale ./scripts/node-gdb ./scripts/test.ts",
    "test-lldb": "LOCPATH=dist/locale ./scripts/node-lldb ./scripts/test.ts",
    "test-valgrind": "LOCPATH=dist/locale ./scripts/node-valgrind ./scripts/test.ts",
    "test-zig": "npm run build-zig && npm run test --",
    "test-zig-debug": "npm run build-zig-debug && npm run test --",
    "install-esbuild": "./scripts/install-esbuild",
    "linux-arm64": "./scripts/linux-arm64 npm run",
    "linux-x64": "./scripts/linux-x64 npm run",
    "repl": "LOCPATH=dist/locale node --import=tsx  ./scripts/repl.ts",
    "// todo:cleanup": "",
    "clean-selva": "make -C clibs clean",
    "clean": "rm -rf ./dist ./node_modules .zig-cache .zig-out ./tmp ./tsconfig.tsbuildinfo && npm run clean-selva",
    "// these were on the root": "",
    "build-podman": "cd podman && ./build.sh",
    "build-locale": "cd locale && ./build.sh",
    "build-sdk": "npm run build -w @based/sdk",
    "check": "for i in packages/*; do npx npm-check-updates -f @based/* -x @based/client-old --cwd $i; done",
    "upgrade": "for i in packages/*; do npx npm-check-updates -f @based/* -x @based/client-old --cwd $i -u; done"
  },
  "sideEffects": false,
  "files": [
    "bin",
    "dist",
    "!*.map",
    "README.md",
    "package.json"
  ],
  "optionalDependencies": {
    "@esbuild/darwin-arm64": "^0.27.0",
    "@esbuild/linux-arm64": "^0.27.0",
    "@esbuild/linux-x64": "^0.27.0"
  },
  "prettier": "@saulx/prettier-config",
  "devDependencies": {
    "@based/client-old": "npm:@based/client@6.11.2",
    "@saulx/prettier-config": "^2.0.0",
    "@saulx/tsconfig": "^1.1.3",
    "@swc-node/register": "^1.11.1",
    "@types/node": "^22.5.3",
    "@types/react": "^18.3.1",
    "async-sema": "3.1.1",
    "concurrently": "^9.2.1",
    "fs-extra": "^11.1.1",
    "get-port": "^7.1.0",
    "http-proxy": "^1.18.1",
    "jsondiffpatch": "^0.7.3",
    "prettier": "^3.6.2",
    "tar": "^7.4.3",
    "ts-node": "^10.9.2",
    "tsdown": "^0.16.7",
    "tsx": "^4.20.6",
    "typescript": "^5.6.3"
  },
  "exports": {
    ".": "./dist/sdk.js",
    "./db": "./dist/index.js",
    "./schema": "./dist/schema.js"
  },
  "dependencies": {
    "@based/opts": "^1.1.0",
    "@saulx/diff": "^2.0.3",
    "fflate": "^0.8.2",
    "isomorphic-ws": "^5.0.0",
    "mime-types": "^3.0.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "utility-types": "^3.11.0",
    "validator": "^13.15.23"
  },
  "engineStrict": true,
  "engines": {
    "node": "24",
    "npm": "11"
  },
  "devEngines": {
    "runtime": {
      "name": "node",
      "version": "24",
      "onFail": "error"
    },
    "packageManager": {
      "name": "npm",
      "version": "11",
      "onFail": "error"
    }
  },
  "os": [
    "darwin",
    "linux"
  ],
  "cpu": [
    "x64",
    "arm64"
  ]
}
